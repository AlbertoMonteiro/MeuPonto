<UserControl x:Class="MeuPontoWP7.SpResumoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    d:DesignHeight="108" d:DesignWidth="408" UseLayoutRounding="True">
    
    <Grid x:Name="LayoutRoot">
    	<TextBlock x:Name="LblHorarioTrabalhado" FontSize="72" FontFamily="/MeuPontoWP7;component/Fonts/Fonts.zip#DS-Digital" LineStackingStrategy="BlockLineHeight" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding HorarioTrabalhado, Mode=OneWay, StringFormat=\{0\}}" Foreground="#FF613682"/>
    </Grid>
</UserControl>