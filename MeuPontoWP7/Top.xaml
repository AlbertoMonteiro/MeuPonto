    			<TextBlock Foreground="#FFF7B604" FontFamily="/MeuPontoWP7;component/Fonts/Fonts.zip#Moire" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="68,0,0,0" Text="meu ponto"/>			
